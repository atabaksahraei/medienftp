        {{ knp_menu_render('WANMedienFTPBundle:Builder:mainMenu') }}
    </div>

    <div id="wrapper">
        <div id="content">
            <h2>{{ block("title") }}</h2>
            {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %}